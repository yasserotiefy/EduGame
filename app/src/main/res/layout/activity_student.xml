<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="example.com.teachme.User.StudentActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="sound"
            android:text="Sound"
            android:visibility="gone"
            android:textColor="@android:color/white"
            app:srcCompat="@drawable/logout" />

        <Button
            android:id="@+id/enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="Enroll"
            android:text="Enrolled"
            android:textColor="@drawable/colortext"
            app:srcCompat="@drawable/logout" />

        <Button
            android:id="@+id/listCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="listCourses"
            android:text="All Courses"
            android:textColor="@drawable/colortext"
            app:srcCompat="@drawable/logout" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="logout"
            android:text="Logout"
            android:textColor="@drawable/colortext"
            app:srcCompat="@drawable/logout" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/flcourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
